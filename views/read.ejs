<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900">
    <div class="h-full w-full p-10 text-white">
      <div class="nav mb-10">
        <a href="/" class="text-blue-500">Home</a>
      </div>

      <h1 class="flex justify-center text-3xl tracking-tighter">All Users</h1>

      <hr class="mb-5 mt-3" />

      

      <div class="Users flex gap-10 flex-wrap">
        <% if(users.length>0){%>
            <%users.forEach((user) => {%>

                <div class="User w-72 p-4 bg-zinc-800 rounded-lg">
                  <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                    <img
                      src="<%=user.image%>"
                      class="h-72 w-full object-cover oblect-top"
                      alt=""
                    />
                    
                  </div>
                  <h3 class="text-xl mt-3 tracking-tighter"><%=user.name%></h3>
                  <h5 class="text-zinc-500"><%=user.email %></h5>
                  <div class="flex gap-20 mt-10">
                    <a href="/edit/<%=user._id%>" class="text-green-500">Edit</a>
                    <a href="/delete/<%=user._id%>" class="text-red-500">Delete</a>
                  </div>
                </div>
        
                <%}) %>
            <%}else{%>
                <h3>No user found</h3>
                <%} %>


      </div>
    </div>
  </body>
</html>
